# EditorConfig  http://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space

# JS
[*.{json,js,ts}]
indent_size = 2

# Bash
[*.{bash,sh}]
indent_size = 2

# Makefile
[{Makefile,**.mk}]
indent_style = tab
